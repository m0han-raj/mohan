---
import dataJson from "../../data.json";
---

<div class="skills-row flex flex-wrap gap-2">
  {dataJson.skills && dataJson.skills.length > 0 ? (
    dataJson.skills.map((skill) => (
      <div class="skill-box bg-black text-white rounded-md px-3 py-1 text-sm">
        {skill}
      </div>
    ))
  ) : (
    <p class="text-color opacity-70">No skills data available</p>
  )}
</div>